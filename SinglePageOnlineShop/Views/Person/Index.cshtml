@model List<GetPersonDto>

<h2>Person List</h2>
<table class="table">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
        <tr>
            <td>@person.FirstName</td>
            <td>@person.LastName</td>
            <td>
                <a asp-action="Details" asp-route-id="@person.Id" class="btn btn-info">Details</a>
                <a asp-action="Edit" asp-route-id="@person.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@person.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Add New Person</a>